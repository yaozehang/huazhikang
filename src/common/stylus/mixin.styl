border-radius($size)
  border-radius:$size
  -webkit-border-radius:$size
  -moz-border-radius:$size
  -ms-border-radius:$size
  -o-border-radius:$size
//点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
//背景图
bg-image($url)
  background-image: url($url)
  background-repeat: no-repeat